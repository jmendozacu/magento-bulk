<?xml version="1.0"?>
<config>
    <modules>
        <AW_Mobile3>
            <version>3.0.4</version><platform>ce</platform>
        </AW_Mobile3>
    </modules>
    <global>
        <blocks>
            <aw_mobile3>
                <class>AW_Mobile3_Block</class>
            </aw_mobile3>
        </blocks>
        <helpers>
            <aw_mobile3>
                <class>AW_Mobile3_Helper</class>
            </aw_mobile3>
        </helpers>
        <models>
            <aw_mobile3>
                <class>AW_Mobile3_Model</class>
            </aw_mobile3>
            <core>
                <rewrite>
                    <design_package>AW_Mobile3_Model_Core_Design_Package</design_package>
                </rewrite>
            </core>
            <enterprise_pagecache>
                <rewrite>
                    <processor>AW_Mobile3_Model_Enterprise_PageCache_Processor</processor>
                </rewrite>
            </enterprise_pagecache>
        </models>
        <resources>
            <aw_mobile3_setup>
                <setup>
                    <module>AW_Mobile3</module>
                    <class>AW_Mobile3_Model_Source_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </aw_mobile3_setup>
            <aw_mobile3_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </aw_mobile3_write>
            <aw_mobile3_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </aw_mobile3_read>
        </resources>
        <events>
            <controller_front_init_before>
                <observers>
                    <aw_mobile3_controller_front_init_before>
                        <type>singleton</type>
                        <class>aw_mobile3/observer</class>
                        <method>pageLoadBeforeFront</method>
                    </aw_mobile3_controller_front_init_before>
                </observers>
            </controller_front_init_before>
            <controller_action_predispatch_customer_account_loginPost>
                <observers>
                    <captcha>
                        <class>aw_mobile3/observer</class>
                        <method>checkUserLogin</method>
                    </captcha>
                </observers>
            </controller_action_predispatch_customer_account_loginPost>
            <!--Adding this observer event as we want to remove the non shippable products from cart while saving shipping method. Mohin, 26 Oct 2015-->
            <!-- We have added this code again for updating mobile theme 2.0.6 to 3.0.3. Erik, 11 Nov 2016, mantis-400 -->
            <checkout_controller_onepage_save_shipping_method>
                <observers>
                    <remove_cart_items>
                        <type>singleton</type>
                        <class>aw_mobile3/observer</class>
                        <method>removeNonShippableProducts</method>
                    </remove_cart_items>
                </observers>
            </checkout_controller_onepage_save_shipping_method>
        </events>
    </global>
    <adminhtml>
        <translate>
            <modules>
                <AW_Mobile3>
                    <files>
                        <default>AW_Mobile3.csv</default>
                    </files>
                </AW_Mobile3>
            </modules>
        </translate>
    </adminhtml>
    <frontend>
        <events>
            <controller_action_predispatch>
                <observers>
                    <aw_mobile3_predispatch>
                        <type>singleton</type>
                        <class>aw_mobile3/observer</class>
                        <method>predispatch</method>
                    </aw_mobile3_predispatch>
                </observers>
            </controller_action_predispatch>
            <controller_action_layout_render_before>
                <observers>
                    <aw_mobile3_layout_render_before>
                        <type>singleton</type>
                        <class>aw_mobile3/observer</class>
                        <method>beforeRenderLayout</method>
                    </aw_mobile3_layout_render_before>
                </observers>
            </controller_action_layout_render_before>
            <controller_action_layout_load_before>
                <observers>
                    <aw_mobile3_layout_render_before>
                        <type>singleton</type>
                        <class>aw_mobile3/observer</class>
                        <method>loadBeforeLayout</method>
                    </aw_mobile3_layout_render_before>
                </observers>
            </controller_action_layout_load_before>
            <controller_action_predispatch_aw_mobile3_customer_loginPost>
                <observers>
                    <captcha>
                        <class>aw_mobile3/observer</class>
                        <method>checkUserLogin</method>
                    </captcha>
                </observers>
            </controller_action_predispatch_aw_mobile3_customer_loginPost>
            <controller_action_predispatch_aw_mobile3_customer_forgotpasswordpost>
                <observers>
                    <captcha>
                        <class>aw_mobile3/observer</class>
                        <method>checkForgotPassword</method>
                    </captcha>
                </observers>
            </controller_action_predispatch_aw_mobile3_customer_forgotpasswordpost>
            <controller_action_predispatch_aw_mobile3_customer_createpost>
                <observers>
                    <captcha>
                        <class>aw_mobile3/observer</class>
                        <method>checkUserCreate</method>
                    </captcha>
                </observers>
            </controller_action_predispatch_aw_mobile3_customer_createpost>
            <http_response_send_before>
                <observers>
                    <aw_mobile3_response_send_before>
                        <class>aw_mobile3/observer</class>
                        <method>sendResponseBefore</method>
                    </aw_mobile3_response_send_before>
                </observers>
            </http_response_send_before>
        </events>
        <routers>
            <aw_mobile3>
                <use>standard</use>
                <args>
                    <module>AW_Mobile3</module>
                    <frontName>awmobile3</frontName>
                </args>
            </aw_mobile3>
        </routers>
        <layout>
            <updates>
                <aw_mobile3>
                    <file>aw_mobile3.xml</file>
                </aw_mobile3>
            </updates>
        </layout>
        <translate>
            <modules>
                <AW_Mobile3>
                    <files>
                        <default>AW_Mobile3.csv</default>
                    </files>
                </AW_Mobile3>
            </modules>
        </translate>
    </frontend>
    <default>
        <captcha  translate="label">
            <frontend>
                <areas>
                    <user_checkout_login>
                        <label>Login during Checkout (Mobile View)</label>
                    </user_checkout_login>
                </areas>
            </frontend>
        </captcha>
        <aw_mobile3>
            <general>
                <is_enabled>0</is_enabled>
                <iphone_home_page></iphone_home_page>
                <display_stock_status_at_catalog>0</display_stock_status_at_catalog>
            </general>
            <design>
                <mobile_theme_name>iphone</mobile_theme_name>
                <tablet_theme_name>ipad</tablet_theme_name>
                <mobile_logo_src></mobile_logo_src>
                <tablet_logo_src></tablet_logo_src>
                <bookmarks_src></bookmarks_src>
                <footer_links_block>0</footer_links_block>
                <cyrillic_fonts>0</cyrillic_fonts>
            </design>
            <behavior>
                <switcher>1</switcher>
                <mobile_detect>1</mobile_detect>
                <tablet_detect>1</tablet_detect>
            </behavior>
        </aw_mobile3>
    </default>
</config>
