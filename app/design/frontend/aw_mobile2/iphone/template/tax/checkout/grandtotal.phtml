    <tr class="shopping-cart-summary__row shopping-cart-summary__row--total">
        <td class="shopping-cart-summary__name" colspan="<?php echo $this->getColspan(); ?>">
            <?php echo $this->getTotal()->getTitle() ?>
        </td>
        <td class="shopping-cart-summary__price">
            <?php echo $this->helper('checkout')->formatPrice($this->getTotal()->getValue()) ?>
        </td>
