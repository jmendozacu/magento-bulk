?><?php
$_cards = $this->getTotal()->getGiftCards();
if (!$_cards) {
    $_cards = $this->getQuoteGiftCards();
}
?>
<?php if ($this->getTotal()->getValue()): ?>
<?php foreach ($_cards as $_c): ?>
    <tr class="shopping-cart-summary__row">
        <td colspan="<?php echo $this->getColspan(); ?>" class="shopping-cart-summary__name">
            <?php $_title = $this->__('Remove'); ?>
            <?php $_url = Mage::getUrl('enterprise_giftcardaccount/cart/remove', array('code'=>$_c['c'])); ?>
            <a href="<?php echo $_url; ?>" title="<?php echo $_title; ?>" class="btn-remove"><img src="<?php echo $this->getSkinUrl('images/btn_remove.gif') ?>" alt="<?php echo $this->__('Remove')?>" /></a>
            <?php echo $this->__('Gift Card (%s)', $_c['c']); ?>
        </td>
        <td class="shopping-cart-summary__price">
            -<?php echo $this->helper('checkout')->formatPrice($_c['a']) ?>
        </td>
    </tr>
<?php endforeach; ?>
<?php endif; ?>
