<?php if($this->getItems()->getSize()): ?>
<div class="box-collateral box-up-sell">
	<h2 class="title"><?php echo $this->__('You Might Be Interested In') ?></h2>

	<div class="block-content">
		<ul class="upsell-products-list">
		<?php foreach($this->getItems() as $_item): ?>
			<li>
				<a href="<?php echo $_item->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_item->getName()) ?>" class="product-image"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(70) ?>" width="70" height="70" alt="<?php echo $this->escapeHtml($_item->getName()) ?>" /></a>
				<div class="content">
					<h3 class="product-name"><a href="<?php echo $_item->getProductUrl() ?>"><?php echo $this->escapeHtml($_item->getName()) ?></a></h3>
					<?php echo $this->getPriceHtml($_item, true, '-related') ?>
				</div>
			</li>
		<?php endforeach ?>
		</ul>
	</div>
</div>
<?php endif ?>
